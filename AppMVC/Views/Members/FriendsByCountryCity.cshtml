@model AppMVC.Models.MembersViewModels.FriendsByCountryCityViewModel
@{
    ViewData["Title"] = "List Of Friends";
}
@{
}

<div class="container px-4 py-4" id="list-of-friends">
    <h2 class="pb-2 border-bottom">List of Friends</h2>

@if (TempData["SuccessMessage"] != null)
{
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

    <p>Below are friends from the database.</p>
    <p>The list contains @Model.TotalFriends friends.</p>

     <form method="get" class="needs-validation" novalidate>
        <input type="hidden" name="pagenr" value="0" />
        <div class="row mb-3">
            <div class="col-md-5">
                <label for="countrySelect" class="form-label">Country</label>
                <select id="countrySelect" 
                        class="form-select" 
                        name="selectedCountry"
                        asp-items="Model.CountrySelection" 
                        onchange="this.form.submit()">
                </select>
            </div>

            <div class="col-md-5">
                <label for="citySelect" class="form-label">City</label>
                <select id="citySelect" 
                        class="form-select" 
                        name="selectedCity" 
                        asp-items="Model.CitySelection"
                        onchange="this.form.submit()">
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <a class="btn btn-outline-danger w-100" 
                   asp-action="FriendsByCountryCity" 
                   asp-route-pagenr="0">
                    <i class="bi bi-x-circle"></i> Clear filters
                </a>
            </div>
        </div>
    </form>

    <div class="row mb-2 text-center">
        <div class="col-md-10">Friends Name & country</div>
    </div>
    
<!-- Friends list -->
    @if (Model.Friends != null && Model.Friends.Any())
    {
        @foreach (var friend in Model.Friends)
        {
            <div class="row mb-2 text-center">
                <div class="col-md-10">
                    <a asp-action="FriendsDetails" asp-route-id="@friend.FriendId">
                        @friend.FirstName @friend.LastName, @((friend as dynamic)?.Address?.Country ?? 
                        (friend as dynamic)?.AddressDbM?.Country ?? "No address")
                    </a>
                </div>
                <div class="col-md-2">
                    <a asp-controller="EditFriend" asp-action="EditFriend" 
                       asp-route-id="@friend.FriendId"
                       class="btn btn-secondary btn-sm m-1">
                        Edit
                    </a>

                    <button type="button" 
                            class="btn btn-danger btn-sm m-1" 
                            data-bs-toggle="modal"
                            data-bs-target="#dangerDelQModal" 
                            data-friend-id="@friend.FriendId"
                            data-friend-name="@friend.FirstName @friend.LastName">
                        Del
                    </button>
                </div>
            </div>
        }

        <nav aria-label="Standard pagination example">
            <ul class="pagination">
                <li class="page-item @(Model.ThisPage == 0 ? "disabled" : "")">
                    <a asp-action="FriendsByCountryCity" 
                       asp-route-pagenr="@Model.PrevPage"
                       asp-route-selectedCountry="@Model.SelectedCountry" 
                       asp-route-selectedCity="@Model.SelectedCity"
                       class="page-link">
                        &laquo;
                    </a>
                </li>

                @for (int i = 0; i < Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.ThisPage ? "active" : "")">
                        <a asp-action="FriendsByCountryCity" 
                           asp-route-pagenr="@i"
                           asp-route-selectedCountry="@Model.SelectedCountry" 
                           asp-route-selectedCity="@Model.SelectedCity"
                           class="page-link">
                            @(i + 1)
                        </a>
                    </li>
                }

                <li class="page-item @(Model.ThisPage == Model.TotalPages - 1 ? "disabled" : "")">
                    <a asp-action="FriendsByCountryCity" 
                       asp-route-pagenr="@Model.NextPage"
                       asp-route-selectedCountry="@Model.SelectedCountry" 
                       asp-route-selectedCity="@Model.SelectedCity"
                       class="page-link">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info">No friends found for the selected filter.</div>
    }

    <div class="modal fade" id="dangerDelQModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="DeleteFriendPetsAndQuotes" method="post">
                    <input type="hidden" name="friendId" id="friendId" />
                    <input type="hidden" name="thisPage" value="@Model.ThisPage" />
                    <input type="hidden" name="selectedCountry" value="@Model.SelectedCountry" />
                    <input type="hidden" name="selectedCity" value="@Model.SelectedCity" />

                    <div class="modal-header">
                        <h5 class="modal-title text-danger">Confirm deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="dangerDelQModalBody">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        const modal = document.getElementById('dangerDelQModal');

        modal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            if (!button) return;

            const friendId = button.getAttribute('data-friend-id');
            const friendName = button.getAttribute('data-friend-name');

            document.getElementById('friendId').value = friendId;

            modal.querySelector('#dangerDelQModalBody').innerHTML = `
                <p class="fw-bold">${friendName}</p>
                <p class="text-danger">
                    This will permanently delete all pets and quotes for this friend.
                </p>
            `;
        });
    </script>
}