@page
@model AppRazor.Pages.SeedModel
@{
    ViewData["Title"] = "Seed";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<!-- Page Seed -->
<div class="container px-4 py-4" id="seed">
    <h2 class="pb-2 border-bottom">Seed friends</h2>

    <p>
        Reseed according to the number of items you want. You may optionally remove the old data before seeding.
    </p>

    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" method="post" novalidate>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="nrItems" class="form-label">Number of items</label>
                        <input asp-for="NrOfItemsToSeed" type="number" class="form-control" id="nrItems" placeholder="" value="@Model.NrOfItemsToSeed">
                        <span asp-validation-for="NrOfItemsToSeed" class="invalid-feedback"></span>
                        
                        <label for="removeSeeds" class="form-check-label" >Clear before seeding</label>
                        <input asp-for="RemoveSeeds" class="form-check-input" type="checkbox" id="removeSeeds">
                        
                    </div>
                </div>
                <button class="w-100 btn btn-primary btn-lg my-4" type="submit">Seed</button>
            </form>
        </div>
    </div>
</div>

<div class="container px-4 py-4" id="webapi-info">
          <h2 class="pb-2 border-bottom">Database overview</h2>
          <p>Below you can see what the current database contains.</p>

          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4 py-5">


              <div class="col d-flex align-items-start">
              <img src="@Url.Content("~/SVG/users.svg")" alt="users" width="46" height="46" />
              <div>
                <h3 class="fw-bold mb-0 fs-4 text-body-emphasis"> Friends</h3>
                <p> @Model.FriendsCount friends</p>
              </div>
            </div>
            <div class="col d-flex align-items-start">
              <img src="@Url.Content("~/SVG/house.svg")" alt="house" width="46" height="46" />
              <div>
                <h3 class="fw-bold mb-0 fs-4 text-body-emphasis"> Addresses</h3>
                <p> @Model.AddressesCount addresses</p>   
              </div>
            </div>
            <div class="col d-flex align-items-start">
              <img src="@Url.Content("~/SVG/fish.svg")" alt="fish" width="46" height="46" />
              <div>
                <h3 class="fw-bold mb-0 fs-4 text-body-emphasis"> Pets</h3>
                <p> @Model.PetsCount pets</p>    
              </div>
            </div>
            <div class="col d-flex align-items-start">
              <img src="@Url.Content("~/SVG/quotes.svg")" alt="quotes" width="46" height="46" />
              <div>
                <h3 class="fw-bold mb-0 fs-4 text-body-emphasis"> Quotes</h3>
                <p> @Model.QuotesCount quotes</p>    
              </div>
            </div>
          </div>
        </div>

@section script
{
    <!-- -->
    <partial name="_ValidationScriptsPartial" />
}
